<table>
  <thead>
    <tr>
      <th>Industry</th>
      <th>Segment</th>
      <th>Specialty</th>
      <th>Product type</th>
      <th>Other</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @shop_categories.each do |shop_category| %>
      <tr>
        <td><%= shop_category.industry %></td>
        <td><%= shop_category.segment %></td>
        <td><%= shop_category.specialty %></td>
        <td><%= shop_category.product_type %></td>
        <td><%= shop_category.other %></td>
        <td><%= link_to 'Show', shop_category %></td>
        <td><%= link_to 'Edit', edit_shop_category_path(shop_category) %></td>
        <td><%= link_to 'Destroy', shop_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>